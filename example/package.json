{
  "name": "my-awesome-app",
  "productName": "My Awesome App",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "src/index.js",
  "scripts": {
    "make": "electron-forge make",
    "makedeb": "electron-forge make --platform=linux"
  },
  "keywords": [],
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "ignore": [
          "^(/build)",
          "^(/out$)",
          ".gitignore",
          ".idea",
          ".vscode",
          "yarn-error.log",
          "yarn.lock"
        ],
        "name": "my-awesome-app"
      },
      "makers": [
        {
          "name": "electron-deboa-maker",
          "config": {
            "deboaOptions": {
              "icon": "./build/icon.png",
              "beforeCreateDesktopEntry": "./build/beforeDesktopEntry.js",
              "controlFileOptions": {
                "maintainer": "Erik Moura",
                "homepage": "https://www.example.com",
                "maintainerScripts": {
                  "postrm": "./build/postrm"
                }
              },
              "tarballFormat": "tar.xz"
            }
          }
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "authors": "Erik Moura"
          }
        }
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.66",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.66",
    "electron": "^20.0.0",
    "electron-deboa-maker": "^1.0.0"
  }
}
